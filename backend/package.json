{
  "name": "ca-office-backend",
  "version": "3.0.0",
  "description": "CA Office Automation System with Multi-Firm Support",
  "main": "main.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "electron": "electron main.js",
    "electron:browser": "electron main.js --browser",
    "build:frontend": "cd ../frontend && npm run build",
    "build:css": "npx @tailwindcss/cli -i ./styles/tailwind.css -o ./public/output.css",
    "watch:css": "npx @tailwindcss/cli -i ./styles/tailwind.css -o ./public/output.css --watch",
    "restore": "node build-scripts/restore-original.js",
    "obfuscate": "node build-scripts/obfuscate-only.js",
    "safe-build": "safe-build.bat",
    "safe-build-ps": "powershell -ExecutionPolicy Bypass -File Safe-Build.ps1",
    "dist": "npm run restore && npm run obfuscate && electron-builder --win",
	"dist:fast": "npm run build:frontend && electron-builder --win",
    "dist:secure": "npm run restore && npm run obfuscate && npm run build:frontend && electron-builder --win",
    "dist:dev": "electron-builder --win",
    "dist:safe": "safe-build.bat && echo Build completed safely",
    "clean": "npm run restore"
  },
  "keywords": [
    "ca-office",
    "automation",
    "multi-firm",
    "billing"
  ],
  "author": "CA Dilip Kumar Hinger",
  "license": "Commercial",
  "build": {
    "appId": "com.caoffice.multifirm",
    "productName": "SAMBHAV",
    "asar": true,
    "asarUnpack": [
      "node_modules/better-sqlite3/**/*",
      "node_modules/bcryptjs/**/*"
    ],
    "directories": {
      "buildResources": ".",
      "output": "dist-final"
    },
    "files": [
      "**/*",
      "node_modules/**/*",
      "!dist",
      "!.git",
      "!*.log",
      "!.vscode",
      "!.idea",
      "!build-scripts",
      "!dist-secure*",
      "!secure_package.json",
      "!npm-debug.log*"
    ],
    "extraResources": [
      {
        "from": "../frontend/build",
        "to": "frontend/build",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "requestedExecutionLevel": "requireAdministrator",
      "certificateFile": null,
      "certificatePassword": null,
      "publisherName": "CA Office Solutions",
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "CA Office Pro",
      "perMachine": true,
      "runAfterFinish": true,
      "deleteAppDataOnUninstall": false,
      "differentialPackage": false,
      "packElevateHelper": true,
      "menuCategory": "Business Software"
    },
    "compression": "maximum",
    "removePackageScripts": true,
    "buildVersion": "3.0.0"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "better-sqlite3": "^12.4.1",
    "body-parser": "^1.20.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "csv-parser": "^3.2.0",
    "dotenv": "^16.0.3",
    "electron-is-dev": "^2.0.0",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "express-validator": "^7.2.1",
    "googleapis": "^161.0.0",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.2",
    "pdfkit": "^0.13.0",
    "uuid": "^9.0.0",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "electron": "^24.0.0",
    "electron-builder": "^24.0.0",
    "javascript-obfuscator": "^4.1.1",
    "nodemon": "^2.0.22",
    "rimraf": "^5.0.1",
    "tailwindcss": "^4.1.14"
  }
}